<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("~/Content/Site.css")"
		  rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/jquery-3.4.1.min.js")"
			type="text/javascript"></script>
</head>
<body vlink="#000">
    <div id="header">
        <h1></h1>
        <ul id="navlist">
            <li>
                <a href="/" id="current">ГЛАВНАЯ</a>
            </li>
            <li>
                <a href="@Url.Content("~/Store/")">КАТАЛОГ</a>
            </li>
            <li>
                @{Html.RenderAction("CartSummary", "ShoppingCart");}
            </li>
            <li>
                <a href="@Url.Content("~/StoreManager/")">АДМИНИСТРАТОР</a>
            </li>
        </ul>
    </div>
    @{Html.RenderAction("CategoryMenu", "Store");}
    <div id="main">
        @RenderBody()
    </div>
</body>
</html>